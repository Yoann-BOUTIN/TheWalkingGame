<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fond_simon"
    tools:context="com.thewalkinggame.app.gestionJeu.JeuSimon.SimonGameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/readySimon"
        android:text="   READY ?   "
        android:textSize="45px"
        android:layout_marginTop="290px"
        android:background="@drawable/btn_ready_simon"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSimon1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="45px"
        android:text="Bienvenue au jeu du Simon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80px"
        android:id="@+id/textSimon"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="35px"
        android:text="Un enchainement de 6 couleurs va vous être proposé et vous devrez par la suite reproduire ce même schéma.\nAppuyez sur le bouton READY lorsque vous êtes prêt !"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCAVSimon"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310px"
        android:textSize="50px"
        android:text="C'est à vous !"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/firstSimonColorLine"
        android:layout_marginTop="420px">
    <Button
        android:id="@+id/layout_green"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="20px"
        android:background="@drawable/green1"/>x
    <Button
        android:id="@+id/layout_red"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="50px"
        android:background="@drawable/red1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondSimonColorLine"
        android:layout_marginTop="650px">
    <Button
        android:id="@+id/layout_yellow"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="20px"
        android:background="@drawable/yellow1"/>
    <Button
        android:id="@+id/layout_blue"
        android:layout_width="300px"
        android:layout_height="200px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="40px"
        android:background="@drawable/blue1"/>
    </LinearLayout>
</RelativeLayout>
