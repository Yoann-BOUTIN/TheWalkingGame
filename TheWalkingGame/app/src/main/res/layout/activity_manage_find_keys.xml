<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thewalkinggame.app.admin.ManageFindKeysActivity"
    android:background="@drawable/fond_simon">

    <TextView
        android:id="@+id/title_manage_quiz"
        android:text="@string/title_activity_find_keys"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"/>

    <View android:id="@+id/separator"
        android:textColor="#FFFFFF"
        android:layout_width = "200dp"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_manage_quiz"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/limite_of_time"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:text="@string/limite_of_time"
        android:layout_below="@id/separator"
        android:layout_marginTop="30dp"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/edit_text_limite_of_time_find_keys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_below="@id/limite_of_time"
        android:layout_toLeftOf="@+id/validation_modification_time_find_keys"
        android:layout_marginTop="15dp"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/validation_modification_time_find_keys"
        android:layout_alignParentRight="true"
        android:layout_below="@id/limite_of_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/checkbox_on_background"/>

    <TextView
        android:id="@+id/text_update_time_find_key_succeed"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_below="@id/validation_modification_time_find_keys"
        android:layout_marginTop="40dp"
        style="@style/text_update_time_find_key"
        android:visibility="invisible"
        android:background="@drawable/update_time_findkey"
        />

</RelativeLayout>
